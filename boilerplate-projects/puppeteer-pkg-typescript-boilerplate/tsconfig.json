{
  "ts-node": {
    // "require": ["tsconfig-paths/register"],
    // "esm": true
  },
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "src/"
  ]
}
